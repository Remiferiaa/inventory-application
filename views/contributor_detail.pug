extend layout 

block content
  h1= contributor.name
  div.pageHeader
    h1 Stages
    div.updaters
      a(href='/contributor/' + contributor._id + '/delete') Delete Contributor
      a(href='/contributor/' + contributor._id + '/update') Update Contributor
  hr
  div.contri-stages
    each stage in stages
      div.stageHolder
        a(href= stage.url) 
          img(src=(undefined=== stage.pic ? '' : stage.pic) alt=stage.name style='width:100%')
    else 
      p No Stages Added By This User Yet
  h1 Materials
  hr
  div.contri-materials
    each material in materials
      div.materialHolder
        a(href=material.url) 
          img(src=(undefined===material.pic ? '' : material.pic) alt=material.name  style='width:100%')
    else 
      p No Material Added By This User Yet
    