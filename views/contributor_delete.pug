extend layout

block content
  div.contri-delList
    h1= title + ' : ' + contributor.name
      if materials.length != 0 && stages.length != 0
        h1 The following must be deleted before you can delete this contributor
        h1 Stages
        hr
        div.contri-stages
          each stage in stages
            div.contri-stage
              a(href=stage.url)
                img(src=(undefined=== stage.pic ? '' : stage.pic) alt=stage.name style='width:100%')

        h1 Materials
        hr
        div.contri-materials
          each material in materials
            div.contri-material
              a(href=material.url)
                img(src=(undefined===material.pic ? '' : material.pic) alt=material.name style='width:100%')


      else 
        h1 Do You Really Want To Delete Contributor : #{contributor.name} ?
        form(method="POST" action='')
          input(type='hidden' name='contributorid' id='contributorid' value=contributor._id)
          div.inputForm
            label(for='pw') Admin Password : 
            input(type='text' name='pw' id='pw' placeholder='Password' autocomplete='off' class='inputField' value='' required)  
          button(type='submit' class='submitBtn') Delete
  br  
  if error
    ul.errors
      each err in error
        p!= err.msg